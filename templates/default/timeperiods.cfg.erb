# Time period definitions
# Automatically generated by Chef

define timeperiod {
  timeperiod_name 24x7
  alias           24 Hours A Day, 7 Days A Week
  sunday          00:00-24:00
  monday          00:00-24:00
  tuesday         00:00-24:00
  wednesday       00:00-24:00
  thursday        00:00-24:00
  friday          00:00-24:00
  saturday        00:00-24:00
}

# Time periods defined by data bags
<% @timeperiods.each do |timeperiods| -%>
<% if timeperiods['timeperiod_name'] && timeperiods['alias']%>
define timeperiod {
  timeperiod_name  <%= timeperiods['id'] %>
  alias            <%= timeperiods['alias'] %>
  <% timeperiods['times'].split(',').each do |conf| %>
  <%= conf %>
  <% end %>
}
<% end %>
